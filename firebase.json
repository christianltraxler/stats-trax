{
  "hosting": {
    "public": "build",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/*",
        "destination": "/index.html"
      },
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/teams/*",
        "destination": "/index.html"
      },
      {
        "source": "/players/*",
        "destination": "/index.html"
      }
    ]
  }
}
